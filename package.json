{
  "name": "Grease",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-img": "^0.8.0",
    "del-cli": "^3.0.1",
    "esbuild": "^0.9.5",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.5",
    "postcss-cli": "^8.3.0",
    "postcss-csso": "^5.0.0",
    "postcss-import": "^14.0.0",
    "postcss-import-ext-glob": "^2.0.1",
    "postcss-preset-env": "^6.7.0",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^21.0.0"
  },
  "scripts": {
    "serve": "run-p watch:** --silent",
    "publish:stage": "ELEVENTY_ENV=stage run-s build:**",
    "publish:prod": "ELEVENTY_ENV=prod run-s build:**",
    "clean": "del-cli \"_public/**\"",
    "build:11ty": "eleventy",
    "watch:11ty": "eleventy --serve --incremental --quiet",
    "build:css": "postcss \"_source/_assets/**/[!_]*/*.css\" --dir _public/assets/ --base _source/_assets/css --map --verbose",
    "watch:css": "npm run build:css -- --watch",
    "build:js": "node esbuild.config.js",
    "watch:js": "npm run build:js -- --watch",
    "lint:css": "stylelint \"_source/**/*.css\" --fix",
    "lint:js": "eslint \"_source/**/*.js\" --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "_source/**/*.css": [
      "stylelint --fix"
    ],
    "_source/**/*.js": [
      "eslint --fix"
    ]
  },
  "browserslist": [
    "cover 90% in US",
    "not dead",
    "not ie 11"
  ]
}
