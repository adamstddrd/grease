{
  "name": "11kit",
  "version": "1.0.0",
  "private": true,
  "description": "turn your web projects up to 11",
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "cssnano": "^4.1.10",
    "del": "^6.0.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "gulp": "^4.0.2",
    "gulp-changed": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-terser": "^2.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "merge-stream": "^2.0.0",
    "postcss-preset-env": "^6.7.0",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "scripts": {
    "serve": "gulp watch & npx eleventy --serve --quiet",
    "build": "gulp && npx eleventy",
    "build:stage": "gulp && ELEVENTY_ENV=stage npx eleventy",
    "build:prod": "gulp && ELEVENTY_ENV=prod npx eleventy",
    "lint:css": "stylelint _source/**/*.pcss --fix",
    "lint:js": "eslint _source/**/*.js --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "_source/**/*.pcss": [
      "stylelint --fix"
    ],
    "_source/**/*.js": [
      "eslint --fix"
    ]
  },
  "browserslist": [
    "cover 90% in US",
    "not dead",
    "not ie 11"
  ]
}
