{
  "name": "11kit",
  "version": "1.0.0",
  "private": true,
  "description": "turn your web projects up to 11",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "cssnano": "^4.1.10",
    "esbuild": "^0.8.19",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.1.14",
    "postcss-cli": "^8.3.0",
    "postcss-import": "^13.0.0",
    "postcss-import-ext-glob": "^1.1.0",
    "postcss-preset-env": "^6.7.0",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "trash-cli": "^4.0.0"
  },
  "scripts": {
    "serve": "npm-run-all -s js:build all:watch",
    "build:stage": "ELEVENTY_ENV=stage run-s all:build",
    "build:prod": "ELEVENTY_ENV=prod run-s all:build",
    "clean": "trash _public",
    "all:build": "run-s css:build cssPages:build js:build 11ty:build",
    "all:watch": "run-p css:watch cssPages:watch js:watch 11ty:watch",
    "11ty:build": "npx eleventy",
    "11ty:watch": "npx eleventy --serve --quiet",
    "css:build": "postcss _source/_assets/css/main.pcss -o _public/assets/main.css --map",
    "css:watch": "postcss _source/_assets/css/main.pcss -o _public/assets/main.css --map --watch",
    "cssPages:build": "postcss _source/_assets/css/pages/**/*.pcss -d _public/assets/ --ext css --map",
    "cssPages:watch": "postcss _source/_assets/css/pages/**/*.pcss -d _public/assets/ --ext css --map --watch",
    "js:build": "esbuild _source/_assets/js/app.js --bundle --minify --sourcemap --outdir=_public/assets",
    "js:watch": "onchange \"_source/_assets/js/**/*.js\" -- npm run js:build",
    "lint:css": "stylelint _source/**/*.pcss --fix",
    "lint:js": "eslint _source/**/*.js --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "_source/**/*.pcss": [
      "stylelint --fix"
    ],
    "_source/**/*.js": [
      "eslint --fix"
    ]
  },
  "browserslist": [
    "cover 90% in US",
    "not dead",
    "not ie 11"
  ]
}
