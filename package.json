{
  "name": "11kit",
  "version": "1.0.0",
  "private": true,
  "description": "turn your web projects up to 11",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "cssnano": "^4.1.10",
    "esbuild": "^0.8.21",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.0",
    "postcss-import": "^13.0.0",
    "postcss-import-ext-glob": "^1.1.0",
    "postcss-preset-env": "^6.7.0",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "trash-cli": "^4.0.0"
  },
  "scripts": {
    "serve": "npm-run-all -s build:js -p watch:**",
    "publish:stage": "ELEVENTY_ENV=stage run-s build:**",
    "publish:prod": "ELEVENTY_ENV=prod run-s build:**",
    "clean": "trash _public",
    "build:11ty": "npx eleventy",
    "watch:11ty": "npx eleventy --serve --quiet",
    "build:css": "postcss _source/_assets/css/main.css -o _public/assets/main.css --map",
    "watch:css": "npm run build:css -- --watch",
    "build:css:pages": "postcss _source/_assets/css/pages/**/*.css -d _public/assets/ --map",
    "watch:css:pages": "npm run build:css:pages -- --watch",
    "build:js": "esbuild _source/_assets/js/app.js --bundle --minify --sourcemap --outdir=_public/assets",
    "watch:js": "onchange \"_source/_assets/js/**/*.js\" -- npm run build:js",
    "lint:css": "stylelint _source/**/*.css --fix",
    "lint:js": "eslint _source/**/*.js --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "_source/**/*.css": [
      "stylelint --fix"
    ],
    "_source/**/*.js": [
      "eslint --fix"
    ]
  },
  "browserslist": [
    "cover 90% in US",
    "not dead",
    "not ie 11"
  ]
}
