{
  "name": "Grease",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-img": "^1.0.0",
    "del-cli": "^4.0.1",
    "esbuild": "^0.14.7",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.2",
    "lint-staged": "^12.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^9.1.0",
    "postcss-csso": "^6.0.0",
    "postcss-import": "^14.0.2",
    "postcss-import-ext-glob": "^2.0.1",
    "postcss-preset-env": "^7.0.2",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^24.0.0"
  },
  "scripts": {
    "serve": "run-p watch:** --silent",
    "publish:stage": "ELEVENTY_ENV=stage run-s build:**",
    "publish:prod": "ELEVENTY_ENV=prod run-s build:**",
    "clean": "del-cli \"_public/**\"",
    "build:11ty": "eleventy",
    "watch:11ty": "eleventy --serve --incremental --quiet",
    "build:css": "postcss \"_source/_assets/**/[!_]*/*.css\" --dir _public/assets/ --base _source/_assets/css --map --verbose",
    "watch:css": "npm run build:css -- --watch",
    "build:js": "node esbuild.config.js",
    "watch:js": "npm run build:js -- --watch",
    "lint:css": "stylelint \"_source/**/*.css\" --fix",
    "lint:js": "eslint \"_source/**/*.js\" --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "_source/**/*.css": [
      "stylelint --fix"
    ],
    "_source/**/*.js": [
      "eslint --fix"
    ]
  },
  "browserslist": [
    "cover 90% in US",
    "not dead",
    "not ie 11"
  ]
}
