{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/*.html"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnknownProperty": "off",
				"noUnknownMediaFeatureName": "off",
				"noUnknownPseudoElement": "off",
				"noUnknownTypeSelector": "off",
				"noUnusedImports": "off",
				"noUnusedFunctionParameters": "off"
			},
			"suspicious": {
				"noUnknownAtRules": "off"
			},
			"complexity": {
				"noImportantStyles": "off"
			},
			"style": {
				"noDescendingSpecificity": "off"
			}
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single"
		}
	},
	"html": {
		"linter": {
			"enabled": false
		},
		"formatter": {
			"enabled": false
		}
	}
}
